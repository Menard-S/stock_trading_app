<h1>Admin Dashboard</h1>

<% if @pending_users.any? %>
  <h2>Pending Users</h2>
  <ul>
    <% @pending_users.each do |user| %>
      <li>
        <%= user.email %> - 
        <%= button_to 'Activate', activate_admin_user_path(user), method: :patch %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No pending users.</p>
<% end %>
